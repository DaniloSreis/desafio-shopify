{{ 'home.css' | asset_url | stylesheet_tag }}

<header class="header">
  <div class="header__content container">
    <h1 class="header__title">{{ section.settings.header_title }}</h1>
    <nav class="header__nav">
      <ul class="header__list">
        <li class="header__item"><a href="" class="header__link">{{block.settings.label |  default: "Produtos" }}</a></li>
        <li class="header__item"><a href="" class="header__link">{{block.settings.label |  default: "Carrinho" }}</a></li>
        <li class="header__item"><a href="" class="header__link">{{block.settings.label |  default: "Conta" }}</a></li>
      </ul>
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "header_title",
      "label": "Nome da Empresa",
      "default": "LÃºmina Care"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link do Menu",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Texto do Link",
          "default": "Produtos"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Destino do Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Header",
      "blocks": [
        {
          "type": "link",
          "settings": { "link_text": "Produtos" }
        },
        {
          "type": "link",
          "settings": { "link_text": "Carrinho" }
        },
        {
          "type": "link",
          "settings": { "link_text": "Conta" }
        }
      ]
    }
  ]
}
{% endschema %}
